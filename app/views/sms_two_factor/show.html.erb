  border: 2px solid #bbf7d0;
}

@media (max-width: 640px) {
  .auth-card {
    padding: 32px 24px;
  }
  
  .auth-title {
    font-size: 1.6rem;
  }
  
  .auth-links {
    flex-direction: column;
    gap: 16px;
    align-items: center;
  }
}
</style>
