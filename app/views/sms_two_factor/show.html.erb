  display: flex;
  justify-content: center;
  gap: 32px;
  margin-top: 24px;
  padding-top: 24px;
  border-top: 1px solid #e2e8f0;
}

.auth-links form {
  margin: 0;
}

.link-secondary {
  color: #667eea;
  text-decoration: none;
  font-size: 0.95rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 6px;
  transition: all 0.2s;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.link-secondary:hover {
  color: #764ba2;
  transform: translateY(-1px);
}

.link-secondary svg {
  transition: transform 0.2s;
}

.link-secondary:hover svg {
  transform: rotate(360deg);
}

.link-cancel:hover svg {
  transform: rotate(0deg) scale(1.1);
}

.alert {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px 18px;
  border-radius: 12px;
  margin-bottom: 24px;
  font-size: 0.95rem;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.alert svg {
  flex-shrink: 0;
}

.alert-danger {
  background: #fef2f2;
