<div class="auth-container">
  <div class="auth-card">
    <div class="auth-icon">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
        <line x1="12" y1="18" x2="12.01" y2="18"></line>
      </svg>
    </div>
    
    <h2 class="auth-title">Two-Factor Authentication</h2>
    <p class="auth-subtitle">We sent a verification code to your phone.<br>Please enter it below to continue.</p>

    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with url: verify_sms_two_factor_path, method: :post, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= label_tag :code, "Verification Code", class: "form-label" %>
        <div class="code-input-wrapper">
          <%= text_field_tag :code, nil, 
              class: "form-input code-input", 
              placeholder: "000000",
              maxlength: 6,
              pattern: "[0-9]{6}",
              required: true,
              autofocus: true,
              inputmode: "numeric" %>
        </div>
        <p class="input-hint">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
          </svg>
          Enter the 6-digit code from your SMS
        </p>
      </div>

      <div class="form-actions">
        <%= submit_tag "Verify & Continue", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= button_to resend_sms_two_factor_path, method: :post, class: "link-secondary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="1 4 1 10 7 10"></polyline>
          <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
        </svg>
        Resend Code
      <% end %>
      <%= button_to logout_path, method: :delete, class: "link-secondary link-cancel" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
        Cancel
      <% end %>
    </div>
  </div>
</div>

<style>
