<div style="width: 100%; overflow-x: auto;">
  <h2 style="text-align: center; color: #102a4d; margin-bottom: 20px;">Past Mediations</h2>

  <table class="mediation-table" style="display: table;">
    <thead>
        <tr>
        <th>Tenant Name</th>
        <th>Email</th>
        <th>Ended At</th>
        <th>Summary</th>
        <th>Feedback</th>
        </tr>
    </thead>
    <tbody style="display: table-row-group;">
        <% @past_mediations.each do |mediation| %>
        <% tenant = mediation.tenant %>
        <tr style="display: table-row;">
            <td data-label="Tenant Name"><%= tenant.FName %> <%= tenant.LName %></td>
            <td data-label="Email"><%= tenant.Email %></td>
            <td data-label="Ended At"><%= mediation.deleted_at.strftime("%B %d, %Y %I:%M %p") %></td>
            <td data-label="Summary">
            <%= link_to "View Summary", mediation_summary_path(mediation.ConversationID), class: "view-link" %>
            </td>
            <td data-label="Feedback">
              <% if needs_good_faith_response?(mediation, @user) %>
                <%= link_to "Complete Feedback", good_faith_response_path(mediation.ConversationID), class: "complete-link" %>
              <% else %>
                <span>Submitted</span>
              <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
