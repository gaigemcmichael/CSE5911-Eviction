<%= stylesheet_link_tag "admin_mediations", "data-turbo-track": "reload" %>

<div class="admin-mediation-details-container">
  <!-- Header -->
  <div class="page-header">
    <% back_path = case @user.Role
                   when "Mediator"
                     third_party_mediations_path
                   when "Admin"
                     dashboard_path
                   else
                     messages_path
                   end %>
    <%= link_to back_path, class: "back-link" do %>
      <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
    <% end %>
    <h1>Mediation Summary</h1>
  </div>

  <div class="details-grid">
    <!-- Left Column: Info & Parties -->
    <div class="details-column left-column">
      
      <!-- Mediation Status -->
      <div class="info-card">
        <div class="card-header">
          <h2><i class="fa-solid fa-info-circle"></i> Status</h2>
        </div>
        <div class="card-body">
          <div class="info-row">
            <span class="label">Ended At</span>
            <span class="value"><%= @mediation.deleted_at&.strftime("%B %d, %Y at %I:%M %p") %></span>
          </div>
          <% if @ended_by %>
            <div class="info-row">
              <span class="label">Ended By</span>
              <span class="value"><%= @ended_by.FName %> <%= @ended_by.LName %> (<%= @ended_by.Role %>)</span>
            </div>
          <% end %>
          
          <div class="screening-section" style="margin-top: 1.5rem;">
            <h3>Feedback</h3>
            <div class="screening-grid">
              <% if @user.Role == "Landlord" || @user.Role == "Mediator" || @user.Role == "Admin" %>
                <div class="screening-item full-width">
                  <span class="q-label">Tenant acted in good faith (per landlord)</span>
                  <span class="q-value"><%= good_faith_label(@mediation.EndOfConversationGoodFaithTenant) %></span>
                </div>
              <% end %>
              
              <% if @user.Role == "Tenant" || @user.Role == "Mediator" || @user.Role == "Admin" %>
                <div class="screening-item full-width">
                  <span class="q-label">Landlord acted in good faith (per tenant)</span>
                  <span class="q-value"><%= good_faith_label(@mediation.EndOfConversationGoodFaithLandlord) %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Parties -->
      <div class="info-card">
        <div class="card-header">
          <h2><i class="fa-solid fa-users"></i> Parties</h2>
        </div>
        <div class="card-body">
          <!-- Tenant -->
          <div class="party-section" style="margin-bottom: 1.5rem;">
            <h3 style="font-size: 0.9rem; text-transform: uppercase; color: #64748b; margin-bottom: 0.5rem;">Tenant</h3>
            <% if @tenant %>
              <div class="info-row">
                <span class="label">Name</span>
                <span class="value"><%= @tenant.FName %> <%= @tenant.LName %></span>
              </div>
              <div class="info-row">
                <span class="label">Email</span>
                <span class="value"><%= @tenant.Email %></span>
              </div>
            <% else %>
              <p class="text-muted">Tenant information unavailable.</p>
            <% end %>
          </div>

          <!-- Landlord -->
          <div class="party-section" style="margin-bottom: 1.5rem; border-top: 1px solid #e2e8f0; padding-top: 1rem;">
            <h3 style="font-size: 0.9rem; text-transform: uppercase; color: #64748b; margin-bottom: 0.5rem;">Landlord</h3>
            <% if @landlord %>
              <div class="info-row">
                <span class="label">Name</span>
                <span class="value"><%= @landlord.FName %> <%= @landlord.LName %></span>
              </div>
              <div class="info-row">
                <span class="label">Email</span>
                <span class="value"><%= @landlord.Email %></span>
              </div>
            <% else %>
              <p class="text-muted">Landlord information unavailable.</p>
            <% end %>
          </div>

          <!-- Mediator -->
          <div class="party-section" style="border-top: 1px solid #e2e8f0; padding-top: 1rem;">
            <h3 style="font-size: 0.9rem; text-transform: uppercase; color: #64748b; margin-bottom: 0.5rem;">Mediator</h3>
            <% if @mediator %>
              <div class="info-row">
                <span class="label">Name</span>
                <span class="value"><%= @mediator.FName %> <%= @mediator.LName %></span>
              </div>
              <div class="info-row">
                <span class="label">Email</span>
                <span class="value"><%= @mediator.Email %></span>
              </div>
            <% else %>
              <p style="color: #64748b; font-style: italic;">No mediator was assigned to this case.</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Signed Documents -->
      <% if @signed_files.any? %>
        <div class="info-card">
          <div class="card-header">
            <h2><i class="fa-solid fa-file-signature"></i> Signed Documents</h2>
          </div>
          <div class="card-body">
            <ul class="signed-documents-list" style="list-style: none; padding: 0; margin: 0;">
              <% @signed_files.each do |file| %>
                <li style="display: flex; align-items: center; justify-content: space-between; padding: 0.75rem 0; border-bottom: 1px solid #f1f5f9;">
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fa-solid fa-file-pdf" style="color: #ef4444;"></i>
                    <%= link_to file.FileName, "/#{file.FileURLPath}", target: "_blank", style: "color: #0f172a; text-decoration: none; font-weight: 500;" %>
                  </div>
                  <span class="badge" style="font-size: 0.75rem; padding: 0.25rem 0.5rem; background: #f1f5f9; border-radius: 4px; color: #64748b;">Signed</span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Right Column: Chat Transcript -->
    <div class="details-column right-column">
      <div class="info-card" style="margin-bottom: 1.5rem; height: calc(60vh - 80px); display: flex; flex-direction: column;">
        <div class="card-header">
          <h2><i class="fa-solid fa-comments"></i> Chat Transcript</h2>
        </div>
        <div class="card-body" style="flex: 1; overflow-y: auto; background: #f8fafc; padding: 1.5rem;">
          <% if @messages.any? %>
            <div class="chat-transcript">
              <% @messages.each do |message| %>
                <% sender = @conversation_participants[message.SenderID] %>
                <% is_me = sender&.UserID == @user.UserID %>
                <% role = sender&.Role %>
                <% 
                   # Determine Alignment
                   align_class = is_me ? "align-items: flex-end;" : "align-items: flex-start;"
                   bubble_align = is_me ? "align-self: flex-end;" : "align-self: flex-start;"

                   # Determine Color based on Role
                   if role == "Mediator"
                     # Green for Mediator
                     bubble_style = "background: #dcfce7; color: #166534; border: 1px solid #bbf7d0;"
                     attachment_border = "border-top: 1px solid #bbf7d0;"
                   elsif role == "Tenant"
                     # Blue for Tenant
                     bubble_style = "background: #3b82f6; color: white;"
                     attachment_border = "border-top: 1px solid rgba(255,255,255,0.2);"
                   else
                     # White for Landlord (and others)
                     bubble_style = "background: white; border: 1px solid #e2e8f0; color: #0f172a;"
                     attachment_border = "border-top: 1px solid #e2e8f0;"
                   end
                   
                   final_bubble_style = "#{bubble_align} #{bubble_style}"
                %>
                
                <div class="message-wrapper" style="display: flex; flex-direction: column; margin-bottom: 1rem; <%= align_class %>">
                  <div class="message-meta" style="font-size: 0.75rem; color: #94a3b8; margin-bottom: 0.25rem; padding: 0 0.5rem;">
                    <strong><%= sender ? "#{sender.FName} #{sender.LName}" : "Unknown" %></strong>
                    <% if role == "Mediator" %>
                      <span class="badge" style="background: #e0f2fe; color: #0369a1; padding: 0 4px; border-radius: 3px; margin-left: 4px;">Mediator</span>
                    <% end %>
                    â€¢ <%= message.MessageDate.strftime("%b %d, %I:%M %p") %>
                  </div>
                  
                  <div class="message-bubble" style="max-width: 80%; padding: 0.75rem 1rem; border-radius: 12px; box-shadow: 0 1px 2px rgba(0,0,0,0.05); <%= final_bubble_style %>">
                    <%= simple_format(message.Contents, {}, wrapper_tag: "div") %>
                    
                    <% if message.file_attachments.any? %>
                      <div class="attachments" style="margin-top: 0.5rem; padding-top: 0.5rem; <%= attachment_border %>">
                        <% message.file_attachments.each do |attachment| %>
                          <div class="attachment-item" style="font-size: 0.85rem;">
                            <i class="fa-solid fa-paperclip"></i> <%= attachment.file_draft.FileName %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="empty-state" style="text-align: center; padding: 3rem; color: #94a3b8;">
              <i class="fa-regular fa-comments" style="font-size: 3rem; margin-bottom: 1rem;"></i>
              <p>No messages were exchanged in this mediation.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Survey Responses -->
      <% if @survey_responses.any? %>
        <div class="info-card">
          <div class="card-header">
            <h2><i class="fa-solid fa-chart-bar"></i> Survey Responses</h2>
          </div>
          <div class="card-body">
            <% tenant_response = @survey_responses.find { |r| r.user&.Role == "Tenant" } %>
            
            <!-- Tenant Response -->
            <% if tenant_response %>
              <% respondent = tenant_response.user %>
              <div class="survey-response-section">
                <h3 style="font-size: 0.9rem; text-transform: uppercase; color: #64748b; margin-bottom: 1rem;">
                  Response from <%= respondent ? "#{respondent.FName} #{respondent.LName}" : "Unknown" %>
                </h3>
                
                <div class="survey-answers" style="display: grid; gap: 1rem;">
                  <div class="survey-item">
                    <span class="q-label" style="display: block; font-size: 0.875rem; color: #64748b; margin-bottom: 0.25rem;">How easy was it to communicate on the platform?</span>
                    <span class="q-value" style="display: block; font-weight: 500; color: #0f172a;"><%= tenant_response.ease_of_use&.titleize %></span>
                  </div>
                  
                  <div class="survey-item">
                    <span class="q-label" style="display: block; font-size: 0.875rem; color: #64748b; margin-bottom: 0.25rem;">How helpful were the platform's resources and information?</span>
                    <span class="q-value" style="display: block; font-weight: 500; color: #0f172a;"><%= tenant_response.helpfulness&.titleize %></span>
                  </div>
                  
                  <div class="survey-item">
                    <span class="q-label" style="display: block; font-size: 0.875rem; color: #64748b; margin-bottom: 0.25rem;">The tool helped you work toward a solution.</span>
                    <span class="q-value" style="display: block; font-weight: 500; color: #0f172a;"><%= tenant_response.helped_solution&.titleize %></span>
                  </div>
                  
                  <% if @mediator && tenant_response.mediator_neutral.present? %>
                    <div class="survey-item">
                      <span class="q-label" style="display: block; font-size: 0.875rem; color: #64748b; margin-bottom: 0.25rem;">The mediator was neutral.</span>
                      <span class="q-value" style="display: block; font-weight: 500; color: #0f172a;"><%= tenant_response.mediator_neutral&.titleize %></span>
                    </div>
                  <% end %>
                  
                  <div class="survey-item">
                    <span class="q-label" style="display: block; font-size: 0.875rem; color: #64748b; margin-bottom: 0.25rem;">Did you reach an agreement?</span>
                    <span class="q-value" style="display: block; font-weight: 500; color: #0f172a;"><%= tenant_response.reached_agreement %></span>
                  </div>
                  
                  <div class="survey-item">
                    <span class="q-label" style="display: block; font-size: 0.875rem; color: #64748b; margin-bottom: 0.25rem;">How confident are you about next steps?</span>
                    <span class="q-value" style="display: block; font-weight: 500; color: #0f172a;"><%= tenant_response.confidence&.titleize %></span>
                  </div>
                  
                  <div class="survey-item">
                    <span class="q-label" style="display: block; font-size: 0.875rem; color: #64748b; margin-bottom: 0.25rem;">Would you recommend this tool?</span>
                    <span class="q-value" style="display: block; font-weight: 500; color: #0f172a;"><%= tenant_response.would_recommend&.titleize %></span>
                  </div>
                  
                  <% if tenant_response.feedback.present? %>
                    <div class="survey-item" style="margin-top: 0.5rem;">
                      <span class="q-label" style="display: block; font-size: 0.875rem; color: #64748b; margin-bottom: 0.5rem;">Additional Feedback:</span>
                      <div style="background: #f8fafc; padding: 0.75rem; border-radius: 6px; border: 1px solid #e2e8f0;">
                        <%= simple_format(tenant_response.feedback, {}, wrapper_tag: "div", style: "color: #475569; font-size: 0.875rem; line-height: 1.5;") %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
