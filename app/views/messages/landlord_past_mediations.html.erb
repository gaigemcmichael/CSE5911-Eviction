<div style="width: 100%; min-height: 100vh; padding: 20px 15px 100px 15px; box-sizing: border-box;">
  <div style="max-width: 1200px; margin: 0 auto;">
    <h1 style="text-align: center; color: #102a4d;">Past Negotiations</h1>
    
    <div style="text-align: center; margin: 20px 0;">
      <%= link_to "Back to Messages", messages_path, class: "mediation-btn", style: "background-color: #6c757d;" %>
    </div>

    <% if @past_mediations.any? %>
      <%= render 'landlords_old_mediations_table' %>
    <% else %>
      <p style="text-align: center; margin-top: 20px;">You have no past negotiations.</p>
    <% end %>
  </div>
</div>
