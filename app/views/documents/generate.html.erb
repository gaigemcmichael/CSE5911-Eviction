<div class="docs-wrapper">
  <h1 class="docs-title">Select a Template</h1>
  <p class="docs-subtitle">Choose a template for generating your proposal document</p>

  <div class="template-grid">
    <div class="template-card">
      <div class="template-header">
        <h3 class="template-title">Agree to Vacate</h3>
        <span class="template-badge">Template A</span>
      </div>
      <div class="template-preview">
        <iframe src="<%= template_preview_path(template: 'a') %>" width="100%" height="400" frameborder="0">
          Your browser does not support embedded previews.
        </iframe>
      </div>
      <div class="template-footer">
        <%= button_to 'Select Template A', template_intake_path(template: 'a', conversation_id: params[:conversation_id]), method: :get, class: 'btn btn-primary btn-block' %>
      </div>
    </div>

    <div class="template-card">
      <div class="template-header">
        <h3 class="template-title">Pay and Stay Agreement</h3>
        <span class="template-badge">Template B</span>
      </div>
      <div class="template-preview">
        <iframe src="<%= template_preview_path(template: 'b') %>" width="100%" height="400" frameborder="0">
          Your browser does not support embedded previews.
        </iframe>
      </div>
      <div class="template-footer">
        <%= button_to 'Select Template B', template_intake_path(template: 'b', conversation_id: params[:conversation_id]), method: :get, class: 'btn btn-primary btn-block' %>
      </div>
    </div>

    <div class="template-card">
      <div class="template-header">
        <h3 class="template-title">Mediation Agreement</h3>
        <span class="template-badge">Template C</span>
      </div>
      <div class="template-preview">
        <iframe src="<%= template_preview_path(template: 'c') %>" width="100%" height="400" frameborder="0">
          Your browser does not support embedded previews.
        </iframe>
      </div>
      <div class="template-footer">
        <%= link_to 'Select Template C', template_intake_path(template: 'c', conversation_id: params[:conversation_id]), class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
</div>