<div class="docs-wrapper">
  <h1 class="docs-title">Document Information</h1>
  <p class="docs-subtitle">Fill out the information below to generate your <%= @template_name %></p>

  <%= form_with url: generate_from_intake_path(template: @template), method: :post, local: true, class: "intake-form" do |f| %>
    <%= hidden_field_tag :conversation_id, params[:conversation_id] if params[:conversation_id].present? %>
    
    <div class="form-grid">
      <!-- Party Information -->
      <div class="form-section">
        <h3 class="section-title">Party Information</h3>
        
        <div class="form-group">
          <%= label_tag :landlord_name, "Landlord Name", class: "form-label required-label" %>
          <%= text_field_tag :landlord_name, 
              @landlord ? "#{@landlord.FName} #{@landlord.LName}".strip : nil, 
              class: "form-input", 
              required: true, 
              placeholder: "Enter landlord's full name" %>
        </div>

        <div class="form-group">
          <%= label_tag :tenant_name, "Tenant Name", class: "form-label required-label" %>
          <%= text_field_tag :tenant_name, 
              @tenant ? "#{@tenant.FName} #{@tenant.LName}".strip : "#{@user.FName} #{@user.LName}".strip, 
              class: "form-input", 
              required: true, 
              placeholder: "Enter tenant's full name" %>
        </div>

        <div class="form-group">
          <%= label_tag :address, "Property Address", class: "form-label required-label" %>
          <%= text_field_tag :address, 
              @tenant&.TenantAddress || @user.TenantAddress || "", 
              class: "form-input", 
              required: true, 
              placeholder: "Enter full property address" %>
        </div>

        <div class="form-group">
          <%= label_tag :negotiation_date, "Agreement Date", class: "form-label required-label" %>
          <%= date_field_tag :negotiation_date, Date.today, class: "form-input", required: true %>
        </div>
      </div>

      <!-- Dispute Details -->
      <div class="form-section">
        <h3 class="section-title">Dispute Details</h3>

        <div class="form-group">
          <%= label_tag :reason, "Reason for Dispute", class: "form-label required-label" %>
          <%= select_tag :reason, options_for_select([
            ["Select a reason", ""],
            "Failure to Pay Rent",
            "Violation of Lease Terms",
            "Damage to Property",
            "Illegal Activity",
            "Nuisance or Disturbance",
            "Expiration of Lease",
            "Unknown"
          ]), class: "form-select", required: true %>
        </div>

        <div class="form-group">
          <%= label_tag :money_owed, "Amount Owed", class: "form-label required-label" %>
          <div class="input-with-prefix">
            <span class="input-prefix" style="padding-right: 10px;">$</span>
            <%= number_field_tag :money_owed, nil, step: 0.01, class: "form-input with-prefix", required: true, placeholder: "0.00" %>
          </div>
          <small class="form-hint">Enter the total amount currently owed</small>
        </div>

        <div class="form-group">
          <%= label_tag :monthly_rent, "Monthly Rent", class: "form-label" %>
          <div class="input-with-prefix">
            <span class="input-prefix">$</span>
            <%= number_field_tag :monthly_rent, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
          </div>
          <small class="form-hint">Enter the regular monthly rent amount</small>
        </div>

        <div class="form-group">
          <%= label_tag :best_option, "Resolution Type", class: "form-label required-label" %>
          <%= select_tag :best_option, options_for_select([
            ["Select an option", ""],
            "Pay Missed Rent",
            "Move Out",
            "Payment Plan"
          ], @default_resolution), class: "form-select", required: true, disabled: true %>
          <%= hidden_field_tag :best_option, @default_resolution %>
          <small class="form-hint">Based on template: <%= @template_name %></small>
        </div>

        <% if @template == 'a' %>
          <div class="form-group">
            <%= label_tag :vacate_date, "Vacate Date", class: "form-label required-label" %>
            <%= date_field_tag :vacate_date, nil, class: "form-input", required: true %>
            <small class="form-hint">Date when tenant will vacate the property</small>
          </div>
        <% end %>
      </div>
      
      <% if @template == 'a' %>
        <!-- Payment Schedule (Optional) -->
        <div class="form-section">
          <h3 class="section-title">Payment Schedule (Optional)</h3>
          <p class="form-hint">Add up to 6 payment installments if there are outstanding balances to be paid</p>
          
          <div id="payment-schedule">
            <div class="payment-row">
              <div class="form-group">
                <%= label_tag :amount1, "Amount", class: "form-label" %>
                <div class="input-with-prefix">
                  <span class="input-prefix">$</span>
                  <%= number_field_tag :amount1, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
                </div>
              </div>
              <div class="form-group">
                <%= label_tag :date1, "Due Date", class: "form-label" %>
                <%= date_field_tag :date1, nil, class: "form-input" %>
              </div>
            </div>
          </div>
          
          <button type="button" class="btn btn-secondary" onclick="addPaymentRow()">+ Add Payment</button>
        </div>
      <% end %>
      
      <% if @template == 'b' %>
        <!-- Amount Breakdown -->
        <div class="form-section">
          <h3 class="section-title">Amount Breakdown</h3>
          
          <div class="form-group">
            <%= label_tag :rent_owed, "Rent Owed", class: "form-label" %>
            <div class="input-with-prefix">
              <span class="input-prefix">$</span>
              <%= number_field_tag :rent_owed, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
            </div>
          </div>
          
          <div class="form-group">
            <%= label_tag :late_fees, "Late Fees", class: "form-label" %>
            <div class="input-with-prefix">
              <span class="input-prefix">$</span>
              <%= number_field_tag :late_fees, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
            </div>
          </div>
          
          <div class="form-group">
            <%= label_tag :utilities, "Utilities", class: "form-label" %>
            <div class="input-with-prefix">
              <span class="input-prefix">$</span>
              <%= number_field_tag :utilities, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
            </div>
          </div>
          
          <div class="form-group">
            <%= label_tag :other_charges_description, "Other Charges Description", class: "form-label" %>
            <%= text_field_tag :other_charges_description, nil, class: "form-input", placeholder: "e.g., Cleaning fees, repairs" %>
          </div>
          
          <div class="form-group">
            <%= label_tag :other_charges, "Other Charges Amount", class: "form-label" %>
            <div class="input-with-prefix">
              <span class="input-prefix">$</span>
              <%= number_field_tag :other_charges, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @template == 'b' %>
      <!-- Payment Plan Options -->
      <div class="form-section">
        <h3 class="section-title">Payment Plan Options</h3>
        
        <div class="form-group">
          <label class="form-label">Payment Type (Check all that apply)</label>
          <div class="checkbox-group-intake">
            <label class="checkbox-label">
              <%= check_box_tag 'payment_lump_sum', '1', false %>
              <span>Lump Sum Payment</span>
            </label>
            <div class="conditional-fields" id="lump-sum-fields" style="display: none; margin-left: 24px; margin-top: 8px;">
              <div class="form-group">
                <%= label_tag :lump_sum_amount, "Amount", class: "form-label" %>
                <div class="input-with-prefix">
                  <span class="input-prefix">$</span>
                  <%= number_field_tag :lump_sum_amount, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
                </div>
              </div>
              <div class="form-group">
                <%= label_tag :lump_sum_date, "Due Date", class: "form-label" %>
                <%= date_field_tag :lump_sum_date, nil, class: "form-input" %>
              </div>
            </div>
          </div>
          
          <div class="checkbox-group-intake">
            <label class="checkbox-label">
              <%= check_box_tag 'payment_monthly', '1', false %>
              <span>Monthly Payments</span>
            </label>
            <div class="conditional-fields" id="monthly-fields" style="display: none; margin-left: 24px; margin-top: 8px;">
              <div class="form-group">
                <%= label_tag :monthly_payment_amount, "Amount per Month", class: "form-label" %>
                <div class="input-with-prefix">
                  <span class="input-prefix">$</span>
                  <%= number_field_tag :monthly_payment_amount, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
                </div>
              </div>
              <div class="form-group">
                <%= label_tag :monthly_payment_months, "Number of Months", class: "form-label" %>
                <%= number_field_tag :monthly_payment_months, nil, class: "form-input", placeholder: "e.g., 6" %>
              </div>
              <div class="form-group">
                <%= label_tag :monthly_payment_day, "Day of Month Due", class: "form-label" %>
                <%= number_field_tag :monthly_payment_day, nil, min: 1, max: 31, class: "form-input", placeholder: "e.g., 15" %>
              </div>
              <div class="form-group">
                <%= label_tag :monthly_payment_start, "Starting Date", class: "form-label" %>
                <%= date_field_tag :monthly_payment_start, nil, class: "form-input" %>
              </div>
            </div>
          </div>
          
          <div class="checkbox-group-intake">
            <label class="checkbox-label">
              <%= check_box_tag 'payment_final', '1', false %>
              <span>Final Payment</span>
            </label>
            <div class="conditional-fields" id="final-fields" style="display: none; margin-left: 24px; margin-top: 8px;">
              <div class="form-group">
                <%= label_tag :final_payment_amount, "Amount", class: "form-label" %>
                <div class="input-with-prefix">
                  <span class="input-prefix">$</span>
                  <%= number_field_tag :final_payment_amount, nil, step: 0.01, class: "form-input with-prefix", placeholder: "0.00" %>
                </div>
              </div>
              <div class="form-group">
                <%= label_tag :final_payment_date, "Due Date", class: "form-label" %>
                <%= date_field_tag :final_payment_date, nil, class: "form-input" %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <label class="form-label">Payment Method (Select one)</label>
          <div class="checkbox-group-intake">
            <label class="checkbox-label">
              <%= radio_button_tag 'payment_method', 'online_portal', false %>
              <span>Online portal</span>
            </label>
            <label class="checkbox-label">
              <%= radio_button_tag 'payment_method', 'money_order', false %>
              <span>Money order</span>
            </label>
            <label class="checkbox-label">
              <%= radio_button_tag 'payment_method', 'cashiers_check', false %>
              <span>Cashier's check</span>
            </label>
            <label class="checkbox-label">
              <%= radio_button_tag 'payment_method', 'other', false %>
              <span>Other</span>
            </label>
          </div>
          <div class="conditional-fields" id="payment-method-other" style="display: none; margin-top: 8px;">
            <%= text_field_tag :payment_method_other_description, nil, class: "form-input", placeholder: "Describe payment method" %>
          </div>
        </div>
      </div>
      
      <!-- Additional Terms -->
      <div class="form-section">
        <h3 class="section-title">Additional Terms (Optional)</h3>
        
        <div class="form-group">
          <%= label_tag :additional_terms, "Any additional terms agreed to by both parties", class: "form-label" %>
          <%= text_area_tag :additional_terms, nil, class: "form-input", rows: 4, placeholder: "Enter any additional terms or conditions..." %>
          <small class="form-hint">These will appear in Section 8 of the agreement</small>
        </div>
      </div>
    <% end %>

    <div class="form-actions">
      <%= link_to "← Back to Templates", generate_file_path, class: "btn btn-secondary" %>
      <%= submit_tag "Generate Document", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>

<script>
// Use IIFE to avoid global variable conflicts with Turbo
(function() {
  let paymentCount = 1;

  window.addPaymentRow = function() {
    paymentCount++;
    const container = document.getElementById('payment-schedule');
    const newRow = document.createElement('div');
    newRow.className = 'payment-row';
    newRow.innerHTML = `
      <div class="form-group">
        <label for="amount${paymentCount}" class="form-label">Amount</label>
        <div class="input-with-prefix">
          <span class="input-prefix">$</span>
          <input type="number" name="amount${paymentCount}" id="amount${paymentCount}" step="0.01" class="form-input with-prefix" placeholder="0.00">
        </div>
      </div>
      <div class="form-group">
        <label for="date${paymentCount}" class="form-label">Due Date</label>
        <input type="date" name="date${paymentCount}" id="date${paymentCount}" class="form-input">
      </div>
      <button type="button" class="btn-remove" onclick="this.parentElement.remove()">×</button>
    `;
    container.appendChild(newRow);
  };

  // Show payment schedule section based on resolution type
  function initializeFormHandlers() {
    const paymentSection = document.querySelector('.payment-schedule-section');
    const hiddenBestOption = document.querySelector('input[name="best_option"][type="hidden"]');
    
    // Check the hidden field value to determine if we should show payment schedule
    if (hiddenBestOption && paymentSection) {
      const resolutionType = hiddenBestOption.value;
      if (resolutionType === 'Payment Plan' || resolutionType === 'Pay Missed Rent') {
        paymentSection.style.display = 'block';
      } else {
        paymentSection.style.display = 'none';
      }
    }
    
    // Handle conditional fields for Pay and Stay template
    const lumpSumCheckbox = document.querySelector('input[name="payment_lump_sum"]');
    const monthlyCheckbox = document.querySelector('input[name="payment_monthly"]');
    const finalCheckbox = document.querySelector('input[name="payment_final"]');
    const paymentMethodRadios = document.querySelectorAll('input[name="payment_method"]');
    
    if (lumpSumCheckbox) {
      lumpSumCheckbox.addEventListener('change', function() {
        const fieldsDiv = document.getElementById('lump-sum-fields');
        if (fieldsDiv) {
          fieldsDiv.style.display = this.checked ? 'block' : 'none';
        }
      });
    }
    
    if (monthlyCheckbox) {
      monthlyCheckbox.addEventListener('change', function() {
        const fieldsDiv = document.getElementById('monthly-fields');
        if (fieldsDiv) {
          fieldsDiv.style.display = this.checked ? 'block' : 'none';
        }
      });
    }
    
    if (finalCheckbox) {
      finalCheckbox.addEventListener('change', function() {
        const fieldsDiv = document.getElementById('final-fields');
        if (fieldsDiv) {
          fieldsDiv.style.display = this.checked ? 'block' : 'none';
        }
      });
    }
    
    if (paymentMethodRadios.length > 0) {
      paymentMethodRadios.forEach(function(radio) {
        radio.addEventListener('change', function() {
          const otherField = document.getElementById('payment-method-other');
          if (otherField) {
            otherField.style.display = (this.value === 'other' && this.checked) ? 'block' : 'none';
          }
        });
      });
    }
  }

  document.addEventListener('DOMContentLoaded', initializeFormHandlers);
  document.addEventListener('turbo:load', initializeFormHandlers);
  document.addEventListener('turbo:render', initializeFormHandlers);
})();
</script>

<style>
