<div class="review-wrapper">
  <div class="review-header">
    <h1>Review & Sign Document</h1>
    <p class="subtitle">Please review the document below and provide signatures to finalize the agreement.</p>
  </div>

  <div class="document-preview">
    <div class="preview-header">
      <h2>Document Preview</h2>
      <a href="<%= download_file_path(@file.FileID) %>" target="_blank" class="btn-download">
        ðŸ“„ Open in New Tab
      </a>
    </div>
    
    <div class="preview-container">
      <%= raw @html_content %>
    </div>
  </div>

  <div class="signature-form">
    <h2>Digital Signatures</h2>
    <p class="form-hint">By signing below, both parties agree to the terms outlined in this document.</p>
    
    <%= form_with url: finalize_document_signatures_path(@file.FileID), method: :post, class: "sign-form" do |f| %>
      <div class="signature-grid">
        <div class="signature-input-group">
          <%= label_tag :landlord_signature, "Landlord Full Name", class: "sig-label" %>
          <%= text_field_tag :landlord_signature, @pending_data[:landlord], 
              class: "sig-input", 
              required: true,
              placeholder: "Enter landlord's full name" %>
          <small class="sig-hint">Will appear as: /s/ [Name]</small>
        </div>

        <div class="signature-input-group">
          <%= label_tag :tenant_signature, "Tenant Full Name", class: "sig-label" %>
          <%= text_field_tag :tenant_signature, @pending_data[:tenant], 
              class: "sig-input", 
              required: true,
              placeholder: "Enter tenant's full name" %>
          <small class="sig-hint">Will appear as: /s/ [Name]</small>
        </div>
      </div>

      <div class="signature-preview">
        <div class="preview-sig">
          <strong>Landlord Signature Preview:</strong>
          <div class="sig-display" id="landlord-preview">/s/ <%= @pending_data[:landlord] %></div>
        </div>
        <div class="preview-sig">
          <strong>Tenant Signature Preview:</strong>
          <div class="sig-display" id="tenant-preview">/s/ <%= @pending_data[:tenant] %></div>
        </div>
      </div>

      <div class="form-actions">
        <%= link_to "â† Back to Documents", documents_path, class: "btn btn-secondary" %>
        <%= submit_tag "Sign Document", class: "btn btn-primary", 
            data: { confirm: "By clicking OK, you confirm that both parties agree to sign this document. This action cannot be undone." } %>
      </div>
    <% end %>
  </div>
</div>

<script>
// Live signature preview
document.addEventListener('DOMContentLoaded', function() {
  const landlordInput = document.getElementById('landlord_signature');
  const tenantInput = document.getElementById('tenant_signature');
  const landlordPreview = document.getElementById('landlord-preview');
  const tenantPreview = document.getElementById('tenant-preview');

  if (landlordInput && landlordPreview) {
    landlordInput.addEventListener('input', function() {
      landlordPreview.textContent = '/s/ ' + this.value;
    });
  }

  if (tenantInput && tenantPreview) {
    tenantInput.addEventListener('input', function() {
      tenantPreview.textContent = '/s/ ' + this.value;
    });
  }
});
</script>

